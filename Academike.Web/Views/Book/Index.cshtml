@model BookViewModel
@{
    ViewData["Title"] = "Meus Cadernos";
}
<div class="panel">
    @*<div class="panel-heading">
            <span class="panel-title">Últimos acessos</span>
        </div>*@
    <div class="panel-body">
        <div class="table-primary">
            <table class="table table-striped table-bordered" data-toggle="datatable">
                <thead>
                    <tr>
                        <th>Nome</th>
                        <th>Descriçao</th>
                        <th data-orderable="false">&nbsp;</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var book in Model.Books)
                    {
                        <tr>
                            <td>@book.Name</td>
                            <td>@book.Description</td>
                            <td style="text-align: center">
                                <a asp-controller="Book" asp-action="Get" asp-route-id="@book.Id"><i class="fa fa-edit"></i></a>
                                <a asp-controller="Book" asp-action="Delete" asp-route-id="@book.Id"><i class="fa fa-trash"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(function () {
            $('[data-toggle="datatable"]').DataTable({
                language: {
                    url: '/js/datatables.locale.pt-BR.json'
                }
            });
        });
    </script>
}